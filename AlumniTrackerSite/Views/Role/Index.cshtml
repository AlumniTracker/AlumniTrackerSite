@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewBag.Title = "Index";
}

 <div class="col-md-8 offset-2">
<h1>All Roles</h1>
<br />
<a asp-action="Create" class="btn btn-secondary">Create a Role</a><br /><br />
 
<table class="table table-sm table-bordered table-bordered">
    <tr><th>Name</th><th>Update Role Users</th><th>Delete Role</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td align="center"><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
            <td align="center">
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
</div>


