@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-9">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-lg-12">

                    <div class="row">
                        <div class="col mt-3">
                            <div class="form-group">
                                <label asp-for="alumniUser.StudentId" class="control-label"></label>
                                <input asp-for="alumniUser.StudentId" class="form-control" disabled />

                            </div>
                        </div>
                        <div class="col mt-3">
                            <div class="form-group">
                                <label asp-for="alumniUser.Name" class="control-label"></label>
                                <input asp-for="alumniUser.Name" class="form-control" />
                                <span asp-validation-for="alumniUser.Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="container-lg border text-center mt-3 Banner">
                <h1>General Info</h1>
            </div>
            <div class="row">
                <div class="col-lg-12">

                    <div class="row">
                        <div class="col mt-3">
                            <div class="form-group">
                                <label asp-for="alumniUser.Degree" class="control-label"></label>
                                <input asp-for="alumniUser.Degree" class="form-control" />
                                <span asp-validation-for="alumniUser.Degree" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col mt-3">
                            <div class="form-group">
                                <label asp-for="alumniUser.YearGraduated" class="control-label"></label>
                                <input asp-for="alumniUser.YearGraduated" class="form-control" />
                                <span asp-validation-for="alumniUser.YearGraduated" class="text-danger"></span>
                            </div>
                        </div>
                    </div><div class="row">
                        <div class="col mt-3">
                            <div class="form-group">
                                <label asp-for="alumniUser.Address" class="control-label"></label>
                                <input asp-for="alumniUser.Address" class="form-control" />
                                <span asp-validation-for="alumniUser.Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col mt-3">
                            <div class="form-group">
                                <label asp-for="alumniUser.City" class="control-label"></label>
                                <input asp-for="alumniUser.City" class="form-control" />
                                <span asp-validation-for="alumniUser.City" class="text-danger"></span>
                            </div>
                        </div>
                    </div><div class="row">
                        <div class="col mt-3">
                            <div class="form-group">
                                <label asp-for="alumniUser.State" class="control-label"></label>
                                <input asp-for="alumniUser.State" class="form-control" />
                                <span asp-validation-for="alumniUser.State" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col mt-3">
                            <div class="form-group">
                                <label asp-for="alumniUser.Zip" class="control-label"></label>
                                <input asp-for="alumniUser.Zip" class="form-control" />
                                <span asp-validation-for="alumniUser.Zip" class="text-danger"></span>
                            </div>
                        </div>
                    </div><div class="row">
                        <div class="col mt-3">
                            <div class="form-group">
                                <label asp-for="alumniUser.Phone" class="control-label"></label>
                                <input asp-for="alumniUser.Phone" class="form-control" />
                                <span asp-validation-for="alumniUser.Phone" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

            <div class="container-lg border text-center mt-3 Banner">
                <h1>Employer Info</h1>
            </div>

            <div class="row">


                <div class="col mt-3">
                    <label asp-for="alumniUser.EmployerName" class="control-label"></label>
                    <input asp-for="alumniUser.EmployerName" class="form-control" />
                    <span asp-validation-for="alumniUser.EmployerName" class="text-danger"></span>
                </div>
                <div class="col mt-3">
                    <div class="form-group">
                        <label asp-for="alumniUser.FieldofEmployment" class="control-label"></label>
                        <input asp-for="alumniUser.FieldofEmployment" class="form-control" />
                        <span asp-validation-for="alumniUser.FieldofEmployment" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mt-3">
                    <label asp-for="alumniUser.Notes" class="control-label"></label>
                    <input asp-for="alumniUser.Notes" class="form-control" />
                    <span asp-validation-for="alumniUser.Notes" class="text-danger"></span>
                </div>

                <div class="form-group mt-3 footer-buffer">
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
